<Page x:Class="HOIA.Allgemein.Aufträge_Zuordnen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HOIA.Allgemein"
      xmlns:src="clr-namespace:HOIA.Erweiterungen"
      mc:Ignorable="d" 
      d:DesignHeight="825" d:DesignWidth="1280"
      Title="Aufträge">

    <Grid Background="White">
        <GroupBox  Header="Auftragszuordnung">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="250" />
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <src:Extended_TreeView  x:Name="treeView_H_Zuordnen_HOWerte" MouseUp="treeView_H_Zuordnen_HOWerte_MouseUp" MouseMove="treeView_H_Zuordnen_HOWerte_MouseMove"  Grid.Column="0" VerticalAlignment="Top"   BorderThickness="1,0,0,0"></src:Extended_TreeView>
                <!--<TreeView x:Name="treeView_H_Zuordnen_HOWerte" MouseUp="treeView_H_Zuordnen_HOWerte_MouseUp" MouseMove="treeView_H_Zuordnen_HOWerte_MouseMove"  Grid.Column="0" VerticalAlignment="Top"  FontSize="16" BorderThickness="1,0,0,0">
                </TreeView>-->
                <ListView Grid.Column="1" Name="ListView_Aufträge" Margin="0,-1,0,0" SelectionChanged="ListView_Aufträge_SelectionChanged" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Auftrag"
				    DisplayMemberBinding="{Binding Item1}"
				    Width="150"/>
                            <GridViewColumn Header="Verarbeitung"
				    DisplayMemberBinding="{Binding Item2}"
				    Width="150"/>
                            <!--<GridViewColumn Header="ODL"
				    DisplayMemberBinding="{Binding Item3}"
				    Width="100"/>-->
                        </GridView>
                    </ListView.View>
                </ListView>
                <GroupBox x:Name="groupBox" Header="Auftragsdetails" Grid.Column="2">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="30" />
                        </Grid.RowDefinitions>
                        <GroupBox x:Name="groupBox4" Header="Daten"  Grid.Row="0"  VerticalAlignment="Top" Grid.ColumnSpan="2" >
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                
                                <Label x:Name="label_Verarbeitung" Content="Verarbeitung:" Grid.Column="0"  Grid.Row="0"/>
                                <Label x:Name="label1" Content="Auftrag Nr:" Grid.Column="2"  Grid.Row="0"/>
                                <Label x:Name="label_ODL" Content="ODL: "  Grid.Column="0"  Grid.Row="1" />
                                <Label x:Name="label_Status" Content="Status:"  Grid.Column="0"  Grid.Row="2"  />
                                <Label x:Name="label_Auftragsdatum" Content="Auftragsdatum:" Grid.Column="2"  Grid.Row="1"  />
                                <Label x:Name="label_Liefertermin" Content="Liefertermin:" Grid.Column="2"  Grid.Row="2"  />

                                <TextBox x:Name="textBox_Verarbeitung" Height="23"  Grid.Column="1"  Grid.Row="0" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Auftrag" Height="23"  Grid.Column="3"  Grid.Row="0" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_ODL" Height="23"  Grid.Column="1"  Grid.Row="1" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_ADatum" Height="23"  Grid.Column="3"  Grid.Row="1" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Status" Height="23"  Grid.Column="1"  Grid.Row="2" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_LTermin" Height="23"  Grid.Column="3"  Grid.Row="2" IsReadOnly="True"/>
                            </Grid>
                        </GroupBox>
                        <!--<GroupBox x:Name="groupBox1" Header="Kunde"  Grid.Row="1" VerticalAlignment="Top" Grid.Column="0">-->
                           
                            <!--<Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="label_Kunden_Name" Content="Name:" Grid.Column="0"  Grid.Row="0" />
                                <Label x:Name="label_Kunde_Anschrift" Content="Anschrift"  Grid.Column="0"  Grid.Row="1" />
                                <Label x:Name="label_Kunde_PLZ" Content="PLZ:"  Grid.Column="0"  Grid.Row="2" />
                                <Label x:Name="label_Kunde_Stadt" Content="Stadt:" Grid.Column="0"  Grid.Row="3" />
                                <Label x:Name="label_Kunde_Land" Content="Land:"  Grid.Column="0"  Grid.Row="4" />

                            </Grid>-->

                        <!--</GroupBox>-->
                        <!--<GroupBox x:Name="groupBox2" Header="Bestimmungsort" Grid.Row="1"   Grid.Column="1">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label x:Name="label_Bestimmungsort_Name" Content="Name:"  Grid.Column="0"  Grid.Row="0" />
                                <Label x:Name="label_Bestimmungsort_Anschrift" Content="Anschrift:"  Grid.Column="0"  Grid.Row="1" />
                                <Label x:Name="label_Bestimmungsort_PLZ" Content="PLZ:"  Grid.Column="0"  Grid.Row="2" />
                                <Label x:Name="label_Bestimmungsort_Stadt" Content="Stadt:"  Grid.Column="0"  Grid.Row="3" />
                                <Label x:Name="label_Bestimmungsort_Land" Content="Land:"  Grid.Column="0"  Grid.Row="4" />
                            </Grid>-->
                        <!--</GroupBox>-->
                        <GroupBox x:Name="groupBox3" Header="Beschreibung der Materials" Grid.Row="1"  Grid.ColumnSpan="2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!--<Label x:Name="label_Walzung" Content="Walzung:" Grid.Column="0"  Grid.Row="0" />-->
                                <Label x:Name="label_Abm1" Content="Abmessung 1:" Grid.Column="0"  Grid.Row="0"/>
                                <Label x:Name="label_Abm2" Content="Abmessung 2:" Grid.Column="2"  Grid.Row="0"/>
                                <Label x:Name="label5" Content="Art:" Grid.Column="0"  Grid.Row="1"/>
                                <Label x:Name="label" Content="Stahlsorte:" Grid.Column="2"  Grid.Row="1"/>
                                <Label x:Name="label123" Content="W. Länge:" Grid.Column="2"  Grid.Row="2"/>
                                <Label x:Name="label433" Content="F. Länge:" Grid.Column="0"  Grid.Row="2"/>
                                <Label x:Name="label4" Content="Charge:" Grid.Column="0"  Grid.Row="3"/>
                                <Label x:Name="label423" Content="Gesamtmenge:" Grid.Column="2"  Grid.Row="3"/>

                                <TextBox x:Name="textBox_Abm1" Height="23" Grid.Column="1"  Grid.Row="0" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Abm2" Height="23" Grid.Column="3"  Grid.Row="0" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Art" Height="23" Grid.Column="1"  Grid.Row="1" IsReadOnly="True"/>

                                <TextBox x:Name="textBox_Stahlsorte" Height="23" Grid.Column="3"  Grid.Row="1" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_FLänge" Height="23" Grid.Column="1"  Grid.Row="2" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_WLänge" Height="23" Grid.Column="3"  Grid.Row="2" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Charge" Height="23" Grid.Column="1"  Grid.Row="3" IsReadOnly="True"/>
                                <TextBox x:Name="textBox_Gesamtmenge" Height="23" Grid.Column="3"  Grid.Row="3" IsReadOnly="True"/>
                            </Grid>
                        </GroupBox>
                        <GroupBox Header="Material" Grid.Row="3" Grid.ColumnSpan="2">
                            <ListView Grid.Column="1" Name="ListView_Material" Margin="0,-1,0,0" SelectionChanged="ListView_Aufträge_SelectionChanged" Height="160" >
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn Header="Datum"
				                        DisplayMemberBinding="{Binding Datum}"
				                        Width="150"/>
                                        <GridViewColumn Header="Bunde"
				                        DisplayMemberBinding="{Binding Bunde}"
				                        Width="100"/>
                                        <GridViewColumn Header="Charge"
				                        DisplayMemberBinding="{Binding Charge}"
				                        Width="100"/>
                                        <GridViewColumn Header="Stahlsorte"
				                        DisplayMemberBinding="{Binding Stahlsorte}"
				                        Width="190"/>
                                        <GridViewColumn Header="Gewicht"
				                        DisplayMemberBinding="{Binding Gewicht, StringFormat=( {0} Kg )}"

				                        Width="120"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                        </GroupBox>
                        <GroupBox x:Name="groupBox6" Header="Ergänzungen" Grid.Row="4"  VerticalAlignment="Top" Grid.ColumnSpan="2" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60"></RowDefinition>
                                    <RowDefinition Height="60"></RowDefinition>
                                    <RowDefinition Height="60"></RowDefinition>
                                    <RowDefinition Height="60" ></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBox x:Name="textBox_TecAnmerkungen"  Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Grid.Row="0" HorizontalAlignment="Stretch"   AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                                <Label x:Name="label_technischeAnmerkungen" Content="Tech. Anmerkungen:" Grid.Column="0"  Grid.Row="0"/>
                                <TextBox x:Name="textBox_IntAnmerkungen" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3"  Grid.Row="2" HorizontalAlignment="Stretch"  AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                                <Label x:Name="label7" Content="Int. Anmerkungen:" Grid.Column="0"  Grid.Row="2" />
                                <Label x:Name="label9" Content="Anlasstemparatur:" Grid.Column="2"  Grid.Row="4" />
                                <TextBox x:Name="textBox_Sägeprogramm" Grid.Column="1"  Grid.Row="4" />
                                <Label x:Name="label8" Content="Sägeprogramm:" Grid.Column="0"  Grid.Row="4"/>
                                <TextBox x:Name="textBox_Anlasstemp"  Grid.Column="3"  Grid.Row="4"/>


                                <Label Grid.Column="0"  Grid.Row="5">Status</Label>
                                <StackPanel Grid.Column="1"  Grid.Row="5" >


                                    <RadioButton Name="radiobutton_Frei" GroupName="status" Foreground="Green" Checked="RadioButton_Checked" >Frei</RadioButton>
                                    <RadioButton Name="radiobutton_Warten" GroupName="status" Foreground="DarkOrange" Checked="RadioButton_Checked">Warten</RadioButton>
                                    <RadioButton Name="radiobutton_Gesperrt" GroupName="status" Foreground="Red" Checked="RadioButton_Checked">Gesperrt</RadioButton>


                                </StackPanel>


                            </Grid>
                        </GroupBox>
                        <Button Grid.Row="5" Grid.Column="1" Width="120" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Wichtig!" />
                        <Button Grid.Row="5" Grid.Column="0" Width="120" HorizontalAlignment="Left" VerticalAlignment="Bottom" Content="Speichern"/>


                    </Grid>

                </GroupBox>
            </Grid>
        </GroupBox>
    </Grid>
</Page>
