<Page x:Class="HOIA.Allgemein.Aufträge_Zuordnen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:HOIA.Allgemein"
      mc:Ignorable="d" 
      d:DesignHeight="825" d:DesignWidth="1280"
      Title="Aufträge">

    <Grid Background="White">
        <GroupBox  Header="Auftragszuordnung" Margin="0,0,740,5">
            <Grid >
                <TreeView x:Name="treeView_H_Zuordnen_HOWerte" MouseUp="treeView_H_Zuordnen_HOWerte_MouseUp" MouseMove="treeView_H_Zuordnen_HOWerte_MouseMove"  HorizontalAlignment="Left"  Margin="14,4,0,0" VerticalAlignment="Top" Width="160" FontSize="16">
                </TreeView>
                <ListView Margin="194,4,14,19"  Name="ListView_Aufträge" >
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="Maschine"
				    DisplayMemberBinding="{Binding Item1}"
				    Width="100"/>
                            <GridViewColumn Header="Verarbeitung"
				    DisplayMemberBinding="{Binding Item2}"
				    Width="100"/>
                            <GridViewColumn Header="ODL"
				    DisplayMemberBinding="{Binding Item3}"
				    Width="100"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox" Header="Auftragsdetails" HorizontalAlignment="Left" Margin="560,0,0,0" VerticalAlignment="Top" Height="820" Width="720">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="599*"/>
                    <RowDefinition Height="59*"/>
                </Grid.RowDefinitions>

                <GroupBox x:Name="groupBox1" Header="Kunde" HorizontalAlignment="Left" Margin="17,124,0,0" VerticalAlignment="Top" Height="140" Width="280">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label_Kunden_Name" Content="Name:" Grid.Column="0"  Grid.Row="0" />
                        <Label x:Name="label_Kunde_Anschrift" Content="Anschrift"  Grid.Column="0"  Grid.Row="1" />
                        <Label x:Name="label_Kunde_PLZ" Content="PLZ:"  Grid.Column="0"  Grid.Row="2" />
                        <Label x:Name="label_Kunde_Stadt" Content="Stadt:" Grid.Column="0"  Grid.Row="3" />
                        <Label x:Name="label_Kunde_Land" Content="Land:"  Grid.Column="0"  Grid.Row="4" />

                    </Grid>

                </GroupBox>
                <GroupBox x:Name="groupBox2" Header="Bestimmungsort" HorizontalAlignment="Left" Margin="337,124,0,0" VerticalAlignment="Top" Height="140" Width="320">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label_Bestimmungsort_Name" Content="Name:"  Grid.Column="0"  Grid.Row="0" />
                        <Label x:Name="label_Bestimmungsort_Anschrift" Content="Anschrift:"  Grid.Column="0"  Grid.Row="1" />
                        <Label x:Name="label_Bestimmungsort_PLZ" Content="PLZ:"  Grid.Column="0"  Grid.Row="2" />
                        <Label x:Name="label_Bestimmungsort_Stadt" Content="Stadt:"  Grid.Column="0"  Grid.Row="3" />
                        <Label x:Name="label_Bestimmungsort_Land" Content="Land:"  Grid.Column="0"  Grid.Row="4" />
                    </Grid>
                </GroupBox>
               

                <GroupBox x:Name="groupBox4" Header="Daten" HorizontalAlignment="Left" Margin="18,4,0,0" VerticalAlignment="Top" Height="100" Width="640">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
   
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="label_ODL" Content="ODL "  Grid.Column="0"  Grid.Row="0" />
                        <Label x:Name="label_Status" Content="Status"  Grid.Column="0"  Grid.Row="1"  />
                        <Label x:Name="label_Auftragsdatum" Content="Auftragsdatum" Grid.Column="2"  Grid.Row="0"  />
                        <Label x:Name="label_Liefertermin" Content="Liefertermin" Grid.Column="2"  Grid.Row="1"  />

                        <TextBox x:Name="textBox4" HorizontalAlignment="Left" Height="23" Width="120"  Grid.Column="1"  Grid.Row="0" />
                        <TextBox x:Name="textBox5" HorizontalAlignment="Left" Height="23" Width="120"  Grid.Column="1"  Grid.Row="1" />
                        <TextBox x:Name="textBox6" HorizontalAlignment="Left" Height="23" Width="120"  Grid.Column="3"  Grid.Row="0" />
                        <TextBox x:Name="textBox7" HorizontalAlignment="Left" Height="23" Width="120"  Grid.Column="3"  Grid.Row="1" />
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox3" Header="Beschreibung der Materials" HorizontalAlignment="Left" Margin="17,284,0,0" VerticalAlignment="Top" Height="99" Width="640">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="label_Walzung" Content="Walzung:" Grid.Column="0"  Grid.Row="0" />
                        <Label x:Name="label_Verarbeitung" Content="Verarbeitung:" Grid.Column="0"  Grid.Row="1"/>
                        <Label x:Name="label5" Content="Art:" Grid.Column="2"  Grid.Row="0"/>
                        <TextBox x:Name="textBox8" HorizontalAlignment="Left" Height="23" Grid.Column="1"  Grid.Row="0" Width="120"/>
                        <TextBox x:Name="textBox9" HorizontalAlignment="Left" Height="23" Grid.Column="1"  Grid.Row="1" Width="120"/>
                        <TextBox x:Name="textBox10" HorizontalAlignment="Left" Height="23" Grid.Column="3"  Grid.Row="0" Width="120"/>
                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox5" Header="Sonstige Informationen" HorizontalAlignment="Left" Margin="17,404,0,0" VerticalAlignment="Top" Height="135" Width="639">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Label x:Name="label4" Content="Charge:" Grid.Column="0"  Grid.Row="0"/>
                        <Label x:Name="label2" Content="Position:" Grid.Column="0"  Grid.Row="1"/>
                        <Label x:Name="label3" Content="Lagerort:" Grid.Column="0"  Grid.Row="2"/>
                        <Label x:Name="label1" Content="Auftrag Nr:" Grid.Column="2"  Grid.Row="0"/>
                        <Label x:Name="label" Content="Stahlsorte:" Grid.Column="2"  Grid.Row="1"/>
                        <TextBox x:Name="textBox11" HorizontalAlignment="Left" Height="23" Grid.Column="1"  Grid.Row="0"/>
                        <TextBox x:Name="textBox12" HorizontalAlignment="Left" Height="23" Grid.Column="1"  Grid.Row="1" Width="120"/>
                        <TextBox x:Name="textBox13" HorizontalAlignment="Left" Height="23" Grid.Column="1"  Grid.Row="2" Width="120"/>
                        <TextBox x:Name="textBox14" HorizontalAlignment="Left" Height="23" Grid.Column="3"  Grid.Row="0" Width="120"/>
                        <TextBox x:Name="textBox15" HorizontalAlignment="Left" Height="23" Grid.Column="3"  Grid.Row="1" Width="120"/>

                    </Grid>
                </GroupBox>
                <GroupBox x:Name="groupBox6" Header="Ergänzungen" HorizontalAlignment="Left" Margin="17,564,0,0" VerticalAlignment="Top" Height="220" Width="640" Grid.RowSpan="2">
                    <Grid ShowGridLines="True">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                            <RowDefinition></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Label x:Name="label9" Content="Anlasstemparatur:" Grid.Column="2"  Grid.Row="2" />
                        <TextBox x:Name="textBox2"  Height="23" Grid.Column="1"  Grid.Row="0" Width="120"/>
                        <Label x:Name="label_technischeAnmerkungen" Content="Tech. Anmerkungen:" Grid.Column="0"  Grid.Row="0" Width="120" Height="36"/>
                        <TextBox x:Name="textBox3" Height="60" Grid.Column="3"  Grid.Row="1" Width="120"/>
                        <Label x:Name="label7" Content="Int. Bemerkungen:" Grid.Column="2"  Grid.Row="0" />
                        <TextBox x:Name="textBox" Height="60" Grid.Column="3"  Grid.Row="1" Width="120"/>
                        <Label x:Name="label8" Content="Sägeprogramm:" Grid.Column="0"  Grid.Row="2"/>
                        <TextBox x:Name="textBox1" Height="23" Grid.Column="3"  Grid.Row="1" Width="120"/>

                        <GroupBox Grid.Column="3"  Grid.Row="1" Header="Status">
                            <StackPanel >

                                <!--<Label FontWeight="Bold">Status</Label>-->
                                <RadioButton GroupName="status">Frei</RadioButton>
                                <RadioButton GroupName="status">Warten</RadioButton>
                                <RadioButton GroupName="status" IsChecked="True">Gesperrt</RadioButton>


                            </StackPanel>
                        </GroupBox>
                       
                    </Grid>
                </GroupBox>
                <!--<StackPanel>
                    <RadioButton GroupName="Os" Content="Windows XP" IsChecked="True"/>
                    <RadioButton GroupName="Os" Content="Windows Vista" />-->
                <!--<RadioButton GroupName="Os" Content="Windows 7" />-->

                <!--</StackPanel>-->

            </Grid>

        </GroupBox>




    </Grid>
</Page>
